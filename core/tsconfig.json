{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  "outDir": "./dist",
  "rootDir": "../",
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "types": ["node", "express"],
    "baseUrl": "./",
    "paths": {
      "types/*": ["../types/*"]
    }
  },
  "include": ["src/**/*", "src/server.ts", "../types/**/*.ts"],
}
